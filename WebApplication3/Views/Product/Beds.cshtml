@model WebApplication3.Manager.Add_to_cartManager
@{
    ViewBag.Title = "Beds";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*style="float:left;*@
@model List<WebApplication3.Models.Add_to_cartModel>
<div class="card shadow mb-4">
    <div class="card-header py-3">
    </div>
    <div class="card-body">
        
            @foreach (var item in Model)
            {
                <div class="row" style="width:890px;">
                    <div class="col-sm-12 col-sm-12">
                        <div class="col-lg-9 col-sm-9">
                            <img src="@Url.Content(item.productimageURL)" style="width:850px;" />
                        </div>
                        <div class="col-lg-3 col-sm-3">
                            @item.productName
                            @item.productprice
                            @item.productID

                        </div>
                        <li class="btn amado-btn mb-10">@Html.ActionLink("Add To Cart", "Add_to_cart", "Product",new { pid= @item.productID}, new { @Class = "btn amado-btn mb-10" })</li>
                    </div>
                    </div>
                    }
               

    </div>
</div>



